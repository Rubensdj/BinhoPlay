    <div id="tv-modal" class="modal-overlay">
        <div class="modal-content">
            <span class="close-btn" onclick="fecharTV()">&times;</span>
            <iframe id="video-frame" src="" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        // --- JAVASCRIPT ---

        // 1. Efeito do Menu
        window.addEventListener('scroll', () => {
            const nav = document.querySelector('.nav');
            if (window.scrollY > 50) nav.classList.add('active');
            else nav.classList.remove('active');
        });

        // 2. Lógica do Player Automático (API Externa)
        function abrirFilme(imdbId) {
            const modal = document.getElementById('tv-modal');
            const videoFrame = document.getElementById('video-frame');
            
            // AQUI ESTÁ O SEGREDO: Usamos uma API que busca pelo ID do IMDB
            // Nota: Isso usa o serviço SuperEmbed (gratuito e externo)
            const urlApi = `https://superembed.stream/movie/${imdbId}`;
            
            videoFrame.src = urlApi;
            modal.style.display = 'flex';
        }

        function fecharTV() {
            const modal = document.getElementById('tv-modal');
            const videoFrame = document.getElementById('video-frame');
            modal.style.display = 'none';
            videoFrame.src = ""; // Para o vídeo
        }
    </script>
